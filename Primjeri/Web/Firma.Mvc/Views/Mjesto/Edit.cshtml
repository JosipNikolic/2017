@model Mjesto

<tr>
  <td>
    <input asp-for="PostBrMjesta" class="form-control" data-save="" />
  </td>
  <td>
    <input asp-for="NazMjesta" class="form-control" data-save="" />
  </td>
  <td>
    <input asp-for="PostNazMjesta" class="form-control" data-save="" />
  </td>
  <td>
    <select class="form-control" asp-for="OznDrzave" asp-items="ViewBag.Drzave" data-save="">
      <option disabled selected value="">Odaberite državu</option>
    </select>
  </td>
  <td>
    <button type="submit" class="btn btn-xs btn-primary save" title="Spremi"><span class="glyphicon glyphicon-ok"></span></button>
  </td>
  <td>
    <button class="btn btn-xs btn-primary cancel" title="Odustani"><span class="glyphicon glyphicon-refresh"></span></button>
  </td>
</tr>
<tr>
  <td colspan="6">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="IdMjesta" data-save="" />
  </td>
</tr>
